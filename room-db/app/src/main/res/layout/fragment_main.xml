<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view_input"
        android:name="com.example.android.tietokanta.ui.fragment.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_input" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view_book_list"
        android:name="com.example.android.tietokanta.ui.fragment.BookListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_book_list" />

</LinearLayout>